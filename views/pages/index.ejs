<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header.ejs %>
  </head>
  <body>
    <% include ../partials/nav.ejs %>
    <div class="video row">
      <div id="youtubevideo"></div>
    </div>

    <div class="text row">
      <span
        class="spinner-border spinner-border-sm"
        id="spinner"
        role="status"
        style="visibility:hidden"
      ></span>
      <input
        class="form-control form-control-lg"
        id="youtubeinput"
        type="text"
        placeholder="https://www.youtube.com/watch?v= . . . . "
      />
    </div>
    <div class="input row">
      <div class="col-lg-6">
        <label for="pitch">Pitch</label>
        <input
          type="range"
          class="custom-range"
          id="pitch"
          min="-12"
          max="12"
          value="0"
          step="1"
        />
      </div>
      <div class="col-lg-6">
        <label for="speed">Speed</label>
        <input
          type="range"
          class="custom-range"
          id="speed"
          min="0.25"
          max="2"
          value="1"
          step="0.25"
        />
      </div>
    </div>
    <div class="input row">
      <div class="col-lg-6">
        <label for="wet">Wet</label>
        <input
          type="range"
          class="custom-range"
          id="wet"
          min="0"
          max="1"
          value="1"
          step="0.01"
        />
      </div>
      <div class="col-lg-6">
        <label for="dry">Dry</label>
        <input
          type="range"
          class="custom-range"
          id="dry"
          min="0"
          max="1"
          value="0"
          step="0.01"
        />
      </div>
    </div>
    <div class="input row">
      <div class="col-lg-6">
        <label for="filter">Low Pass Filter</label>
        <input
          type="range"
          class="custom-range"
          id="filter"
          min="0"
          max="10000"
          value="0"
          step="50"
        />
      </div>
      <div class="col-lg-6">
        <label for="gain">Gain</label>
        <input
          type="range"
          class="custom-range"
          id="gain"
          min="0"
          max="5"
          value="0.5"
          step="0.01"
        />
      </div>
    </div>
    <div class="input row text-center">
      <div class="col-lg-6 col-sm-12">
        <button
          class="btn btn-primary btn-lg"
          id="samplebutton"
          data-playing="false"
        >
          <span>Load Sample</span>
        </button>
      </div>
      <div class="col-lg-6 col-sm-12">
        <button
          class="btn btn-primary btn-lg"
          id="playbutton"
          data-playing="false"
          role="switch"
          data-toggle="button"
          aria-pressed="false"
        >
          <span>Play/Pause</span>
        </button>
      </div>
    </div>
    <script type="text/javascript" src="./jsfiles/audioelement.js"></script>
    <script type="text/javascript" src="./jsfiles/connectsource.js"></script>
    <script type="text/javascript" src="./jsfiles/bundle.js"></script>
    <script type="text/javascript" src="./jsfiles/ytapi.js"></script>
    <script type="text/javascript" src="./jsfiles/functions.js"></script>
  </body>
</html>
